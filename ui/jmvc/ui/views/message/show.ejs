{% load i18n %}
<h2>{% trans "Inbox" %}</h2>

<% if (messages.length == 0) { %>

  <em>{% trans "no messages" %}</em>

<% } else { %>

<table class="light">
  <thead>
    <tr>
      <th width="18%">{% trans "Date" %}</th>
      <th width="32%">{% trans "From" %}</th>
      <th width="15%">{% trans "To" %}</th>
      <th>{% trans "Subject" %}</th>
    </tr>
  </thead>
  <tbody>
    <% for (var i=0; i<messages.length; i++) { %>
      <tr class="<%=(i%2)===0?'odd':'even'%>
                 <%= (!messages[i].read_at) ? 'unread' : '' %>
        ">
        <td><%= messages[i].received_at.substring(0,16) %></td>
        <td><%= messages[i].sender %></td>
        <td><%= account.get_record_label(messages[i].record_id) || account.fullName %></td>
        <td><a href="#" id ="<%= messages[i].id %>" class="message_subject"><%= messages[i].subject %></a></td>
      </tr>
      <% } %>
   </tbody>
</table>

<% } %>